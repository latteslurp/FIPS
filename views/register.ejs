<%- include("./partials/header") %> 
<h1 class="text-center section">Sign Up Page</h1>

<div class="container">
    <div class="row">
        <div class="sign-up-login">
            <form action="/register" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Username" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <input class="form-control btn btn-lg btn-success" type="submit">
                </div>
                <div class="form-group text-center">
                    <p><strong>One step away </strong> from your life changer. <strong>Go go go!</strong></p>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("./partials/footer") %>